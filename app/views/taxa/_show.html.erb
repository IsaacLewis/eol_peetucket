<input type="hidden" id="data_objects_to_log" name="data_objects_to_log" value="<%= @data_object_ids_to_log.join(',') %>">
<input type="hidden" id="taxon_concept_to_log" name="data_objects_to_log" value="<%= @taxon.id %>">

<div class="page-separator" id="<%=@page_separator%>"></div>

    <div id="page-title">

      <%- if @contains_unvetted_objects -%>
          <div id="unvetted-page-warning-box">
            <div class="message-box">
            <%= "This page contains information that has not been reviewed."[:page_has_not_been_review]%>
            </div>
          </div>     
       <%- end -%>
       
        <% if @taxon.vetted_id != Vetted.trusted.id %>
            <div class="unvetted-title-names">
        <% end %>
        <h1><%= hh(@taxon.title) %></h1>
        <h2><%= hh(@taxon.subtitle) %></h2>
        
        
          
        
        <hr />
        <span class="classification-attribution-name"><%= @rank %> recognized by <%= agent_icons_partial(@taxon.classification_attribution.reverse, :show_text_if_no_icon=>true, :only_show_col_icon=>true, :separator=>',&nbsp;', :last_separator=>'&nbsp;in&nbsp;', :taxon => @taxon)%></span><br />
        
        <% if @taxon.vetted_id != Vetted.trusted.id %>
            </div>
        <% end %>
        
        


        <div id="post-info" class="clearfix">

            <span class="iucn-status">

                <% if @taxon.iucn_conservation_status != ''%>
                    <%= "IUCN Red List Status"[] %>: <span class="iucn-status-value"><%=external_link_to(@taxon.iucn_conservation_status,@taxon.iucn_conservation_status_url)%></span>
                <% else %>
                    &nbsp;
                <% end %>
            </span>
            <span class="page-status">
               <%= current_user.expertise.to_s == 'expert' ? link_to('Switch to common names',taxon_url(:id=>@taxon_id) + '?expertise=middle') : link_to('Switch to scientific names',taxon_url(:id=>@taxon_id) + '?expertise=expert') %>
            </span>
            <hr />             
        </div>
        
    </div> <!-- /page title -->
 
    <%= render(:partial => 'mediacenter',
            :locals => {:current_user => current_user}) %>

    <!-- page content -->
    <div id="page-content-bgfaux"> 
    <div id="page-content" class="clearfix">

        <!-- left page content -->
        <div id="left-page-content">

            <div id="sliding-toggle">                    
                <div id="slider">
                    <div id="handle"></div>
                </div>
                <div id="grid"></div>
            </div>

            <input id="current_taxon_id" type="hidden" name="current_taxon_id" value="<%= @taxon_id %>" />
            <input id="current_content" type="hidden" name="current_content" value="<%= @category_id %>" />
            <input id="canonical_form" type="hidden" name="canonical_form" value="<%= remove_html(@taxon.canonical_form) %>" />

            <script language="javascript" type="text/javascript">
            // <![CDATA[
            eol_slider('<%= current_user.vetted.to_s %>', <%= @taxon.id %>);
            // ]]>
            </script>

            <h4 id="toc-header"><%= "Table Of Contents"[] %></h4>
            <ul id="toc">
                <% 
                  unless @taxon.table_of_contents(:vetted_only=>current_user.vetted).blank?
                      for item in @taxon.table_of_contents(:vetted_only=>true)
                          %><%= render :partial => 'table_of_content_item', :locals=>{:item=>item} %> <%
                          end
                  end -%>
            </ul>
            <hr />

            <% # don't show curators for now until we can only show curators that actually did something on this page
               # Feb. 12, 2009 Peter Mangiafico
               #= render :partial => 'curator_list'
            %>
            
        </div> <!-- /left page content -->
        
        <div id="center-page-content">      
            <%= render :partial => 'content' %>             
        </div><!-- /center-page-content -->
        <div id="center-page-content-loading" style="display:none;">
            <%=image_tag 'indicator_arrows_black.gif', :alt=>'Working...'%>
        </div> <!-- /center-page-content-loading -->    
                    
        <div id="right-page-content">
            <%= render :partial => 'internal_nav' %>            
            <% @ping_host_urls.each do |host_url| %>
            <img style="display:none;" src="<%= host_url %>" alt="this image is giving credit to the content provider and should not render."/>
            <% end %>
        </div> <!-- /right page content -->

    </div> <!-- /page-content -->
  </div> <!-- /page-content-bgfaux -->
