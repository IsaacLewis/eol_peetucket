<div class=".ext_object" id="bhl_wrapper">
  <table width="100%" cellspacing="5" cellpadding="5" border="0">
    <tr>
      <td valign="top"><%=external_link_to(image_tag('/images/bhl_logo.gif'),"http://www.biodiversitylibrary.org", {:show_link_icon => false})%></td>
      <td>
        <span class="smalltext">The following bibliography has been generated by automated services.  BHL
        uses taxonomic intelligence tools to locate, verify, and record
        scientific names located within the text of each digitized page in the
        BHL digital collection.</span><br/>
        <a href="" id="bhl_link" name="bhl_link" target="_blank">View Discovered Bibliography in BHL</a> <%=external_link_icon%>
      </td>
    </tr>
  </table>

  <script type="text/javascript">
    $('bhl_link').href='<%=external_link_url%>?url=' + encodeURI('http://www.biodiversitylibrary.org/name/' + $('canonical_form').value);
  </script>

  <% unless @content[:items].empty?

    if @content[:items].collect {|item| item["publication_title"] }.uniq.size > 1 %>
      <div class="divider"></div>
      <table class="results_table" cellspacing="0" summary="TOC">
      <tr><th>BHL Summary</th></tr>
      <% bhl_page_title = ''
      @content[:items].each_with_index do  |content_item, counter|
        unless bhl_page_title == hh(content_item["publication_title"])
          bhl_page_title = hh(content_item["publication_title"])
          column_class=cycle('odd','even') %>
          <tr><td class="<%= column_class %>"><a href="#BHL<%=counter.to_s%>"><%=hh(content_item["publication_title"])%></a><br/><span class="smalltext"><%=hh(content_item["publication_details"])%></span></td></tr>
      <% end
      end
    end %>
    </table>
  <% end %>
  <div class="divider"></div>
  <% bhl_page_title = ''

    @content[:items].each_with_index do |content_item, counter|
    if content_item["publication_title"] != bhl_page_title
      unless bhl_page_title.empty? %>
          </table>

        <div class="divider"></div>
      <% end
      bhl_page_title = hh(content_item["publication_title"]) %>
      <a name="BHL<%=counter.to_s%>" />
      <h2><%=external_link_to(hh(content_item["publication_title"]),hh(content_item["publication_url"]))%></h2>
      <span class="smalltext"><%=hh(content_item["publication_details"])%></span>
      <table class="results_table" cellspacing="0" summary="Links">
        <tr><th>Pages</th></tr>
    <% end %>
        <% column_class=cycle('odd','even')
        item_name =  ""
        item_name += content_item["item_year"] + ". " unless content_item["item_year"] == '' or content_item["item_year"] == '0'
        item_name +="Vol. " + content_item["item_volume"] + ", " unless content_item["item_volume"] == '' or content_item["item_volume"] = '0'
        item_name += "Issue " + content_item["item_issue"] + ", " unless content_item["item_issue"] == '' or content_item["item_issue"] = '0'
        item_name += external_link_to('Page ' + content_item["item_number"], content_item["item_url"])%>
        <tr><td class="<%= column_class %>"><%=item_name%></td></tr>
  <% end %>
      </table>

    <div class="divider"></div>

  <div class="divider"></div>
  <div class="content-attribution-area">
      <div class="attribution-header text-area-header"><%= "Source and Additional Information"[] %></div>
    <span class="source">Content provided by the <%=external_link_to("Biodiversity Heritage Library","http://www.biodiversitylibrary.org/")%></span>
  </div>
</div>
